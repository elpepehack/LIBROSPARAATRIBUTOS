@model T3_PILCO_JOSE.Models.Libro

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<form method="post" asp-action="Eliminar">
    @* Campo oculto para el ID *@
    <input asp-for="Id" type="hidden" />

    @* Campos ocultos adicionales para evitar errores en el POST *@
    @Html.HiddenFor(model => model.Titulo)
    @Html.HiddenFor(model => model.Autor)
    @Html.HiddenFor(model => model.Tema)
    @Html.HiddenFor(model => model.Editorial)
    @Html.HiddenFor(model => model.AnioPublicacion)
    @Html.HiddenFor(model => model.Paginas)
    @Html.HiddenFor(model => model.Categoria)
    @Html.HiddenFor(model => model.Material)
    @Html.HiddenFor(model => model.Copias)

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <h2 class="text-intro pl-3">¿Está seguro que desea eliminar este Libro?</h2>
        </div>

        <div class="container">

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Titulo" class="form-label">Título</label>
                    <input asp-for="Titulo" class="form-control" disabled />
                </div>

                <div class="col-md-6">
                    <label asp-for="Autor" class="form-label">Autor</label>
                    <input asp-for="Autor" class="form-control" disabled />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Tema" class="form-label">Tema</label>
                    <input asp-for="Tema" class="form-control" disabled />
                </div>

                <div class="col-md-6">
                    <label asp-for="Editorial" class="form-label">Editorial</label>
                    <input asp-for="Editorial" class="form-control" disabled />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="AnioPublicacion" class="form-label">Año de Publicación</label>
                    <input asp-for="AnioPublicacion" class="form-control" disabled />
                </div>

                <div class="col-md-6">
                    <label asp-for="Paginas" class="form-label">Páginas</label>
                    <input asp-for="Paginas" class="form-control" disabled />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Categoria" class="form-label">Categoría</label>
                    <input asp-for="Categoria" class="form-control" disabled />
                </div>

                <div class="col-md-6">
                    <label asp-for="Material" class="form-label">Material</label>
                    <input asp-for="Material" class="form-control" disabled />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Copias" class="form-label">Copias</label>
                    <input asp-for="Copias" class="form-control" disabled />
                </div>
            </div>

            <div class="d-grid gap-2 d-md-block mt-3">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-controller="Libros" asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
